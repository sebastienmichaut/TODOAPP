{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }}
{% endblock %}


{% block body %}
{{ parent() }}

<h3>Vue de toutes les listes</h3>
    <div class="container">
        <div class="row">
            {% for list in listes %}
                <div class="card" style="width: 18rem; background-color: {{ list.color }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ list.name }}</h5>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

<a href="/">Retour</a>
{% endblock %}